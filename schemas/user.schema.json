{
    "$schema": "https://json-schema.org/draft-06/schema",
    "title": "User",
    "description": "Describes all user related information",
    "type": "object",
    "properties": {
        "id": {
            "description": "Unique user id",
            "type": "integer"
        },
        "availability": {
            "description": "List of time windows when the user is NOT available",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "startingAt": {
                        "description": "In a format that adheres to ISO 8601, for example output of Javascripts Date.toJSON()",
                        "type": "string"
                    },
                    "duration": {
                        "description": "In minutes",
                        "type": "integer"
                    }
                },
                "required": [ "startingAt", "duration" ]
            }
        },
        "personalInfo": {
            "description": "Contact info of the employee",
            "type": "object",
            "properties": {
                "firstname": {
                    "type": "string"
                },
                "lastname": {
                    "type": "string"
                },
                "jobcode": {
                    "type": "string"
                },
                "isStudent": {
                    "type": "boolean",
                    "default": false
                },
                "email": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "string"
                },
                "adress": {
                    "type": "string",
                },
                "postNumber": {
                    "type": "string",
                },
                "city": {
                    "type": "string"
                },
                "homeLocation": {
                    "type": "string"
                },
                "personNumber": {
                    "type": "string"
                },
                "valviraID": {
                    "type": "string"
                }
            },
            "required": [ "name", "email", "phoneNumber" ]
        },
        "preferences": {
            "type": "object",
            "default": {},
            "title": "The preferences Schema",
            "required": [
                "morning",
                "evening",
                "night",
                "pay",
                "fullShift",
                "distance"
            ],
            "properties": {
                "morning": {
                    "type": "integer",
                    "default": 0,
                    "title": "The morning Schema",
                    "examples": [
                        2
                    ]
                },
                "evening": {
                    "type": "integer",
                    "default": 0,
                    "title": "The evening Schema",
                    "examples": [
                        3
                    ]
                },
                "night": {
                    "type": "integer",
                    "default": 0,
                    "title": "The night Schema",
                    "examples": [
                        1
                    ]
                },
                "pay": {
                    "type": "integer",
                    "default": 0,
                    "title": "The pay Schema",
                    "examples": [
                        4
                    ]
                },
                "fullShift": {
                    "type": "integer",
                    "default": 0,
                    "title": "The fullShift Schema",
                    "examples": [
                        5
                    ]
                },
                "distance": {
                    "type": "integer",
                    "default": 0,
                    "title": "The distance Schema",
                    "examples": [
                        20
                    ]
                }
            }
                }
            }
        }
